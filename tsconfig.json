{
  "compilerOptions": {
    "target": "es2017", 
    "module": "commonjs",                             
    "lib": ["ES6"],                                                                            
    "allowJs": true,                                 
    "outDir": "./dist",                               
    "rootDir": "./src", 
    "removeComments": true,                                                                 
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
    ],
    "resolveJsonModule": true,
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,                                                 
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                     
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*":["./src/controllers/*"],
      "@models/*":["./src/models/*"],
      "@views/*":["./src/views/*"],
      "@config/*":["./src/config/*"],
    }                            
  }
}
